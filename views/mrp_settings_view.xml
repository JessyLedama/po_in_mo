<odoo>
    <record id="view_mrp_settings_inherit" model="ir.ui.view">
        <field name="name">mrp.settings.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='process_operations_setting_container']" position="inside">
                <div>
                    <label for="mo_po_required_products"/>
                    <field name="mo_po_required_products"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
